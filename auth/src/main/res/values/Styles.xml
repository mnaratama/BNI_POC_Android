<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize25Percent" parent="">
        <item name="cornerSize">16%</item>
    </style>

    <style name="RegularText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="RegularText.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextButtonSetting" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CardNewHotDealTextTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="lblTagSetting" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
    </style>


    <style name="BalanceCurrency" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/minus_currency</item>
        <item name="android:letterSpacing">0.20</item>
        <item name="android:gravity">end</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BalanceCurrency.Label" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.10</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="RegularText.LabelButton">
        <item name="lineHeight">18sp</item>
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:letterSpacing">0.16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ButtonBni" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/general_button</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textColor">@color/btn_general_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="BiometricBni" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/biometric_button</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/bni_teal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonBni_drawable_right" parent="ButtonBni">
        <item name="android:drawableRight">@drawable/arrow_right_white</item>
    </style>

    <style name="login_label_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>